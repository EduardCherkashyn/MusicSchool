{% extends 'base.html.twig' %}

{% block title %}Файл{% endblock %}

{% block body %}
<div class="container pt-3">
    <h1 class="pb-3">Название:{{ file.name }}</h1>
    <div class="d-flex pb-3">
    <a href="{{ path('file_index') }}" class="btn btn-primary mr-3 btn-lg">назад к списку</a>

    <a href="{{ path('file_edit', {'id': file.id}) }}" class="btn btn-warning mr-3 btn-lg">редактировать</a>

    {{ include('file/_delete_form.html.twig') }}
    </div>
    <embed src="{{ asset('assets/'~file.path)}}" class="w-100" height="800" type='application/pdf'>
</div>
{% endblock %}
