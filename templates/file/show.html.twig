{% extends 'base.html.twig' %}

{% block title %}Файл{% endblock %}

{% block body %}
<div class="container pt-3">
    <h1 class="pb-3">Назва:&nbsp;{{ file.name }}</h1>
    <div class="d-flex pb-3">
    <a href="{{ path('file_index') }}" class="btn btn-primary mr-3 btn-lg">Назад до списку</a>

    <a href="{{ path('file_edit', {'id': file.id}) }}" class="btn btn-warning mr-3 btn-lg">Редагувати</a>

    {{ include('file/_delete_form.html.twig') }}
    </div>
    <embed src="{{file.path}}" class="w-100" height="800" type='application/pdf'>
</div>
{% endblock %}
