{% extends 'base.html.twig' %}

{% block title %}Файл{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ file.name }}</h1>
    <a href="{{ path('file_index') }}" class="btn btn-primary">назад к списку</a>

    <a href="{{ path('file_edit', {'id': file.id}) }}" class="btn btn-warning">редактировать</a>

    {{ include('file/_delete_form.html.twig') }}
    <embed src="{{ asset('assets/'~file.path)}}" class="w-100" height="800" type='application/pdf'>

</div>
{% endblock %}
