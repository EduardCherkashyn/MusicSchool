{% extends 'base.html.twig' %}

{% block title %}Список файлов{% endblock %}

{% block body %}
    <div class="container">
    <h1>Список файлов</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for file in files %}
            <tr>
                <td>{{ file.id }}</td>
                <td>{{ file.name }}</td>
                <td>
                    <a href="{{ path('file_show', {'id': file.id}) }}" class="btn btn-primary">показать</a>
                    <a href="{{ path('file_edit', {'id': file.id}) }}"  class="btn btn-warning">редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">не найдено записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('file_new') }}" class="btn btn-success">Добавить новый</a>
    </div>
{% endblock %}
