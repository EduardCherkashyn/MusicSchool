{% extends 'base.html.twig' %}
{% block title %}Results{% endblock %}
{% block body %}
    <div class="container">
    <table class="table table-hover">
        <tr>
            <th>Date:</th>
            <th>Homework</th>
            <th>Mark</th>
            <th>Comments</th>
            <th>Attendance</th>
        </tr>
{%for lesson in student.lessonsArchive %}
    <tr>
        <td>{{ lesson.date|date("m/d/Y") }}</td>
        <td>{{ lesson.homework }}</td>
        <td>{{ lesson.mark }}</td>
        <td>{{ lesson.markComment}}</td>
        {%if lesson.attendance is null%}
            <td>N</td>
        {% else %}
            <td>Y</td>
            {% endif %}
    </tr>
{% endfor %}
    </table>
    </div>
{% endblock %}
