{% extends 'base.html.twig' %}
{% block title %}Статистика ученика{% endblock %}
{% block body %}
    <div class="container">
    <table class="table table-hover">
        <tr>
            <th>Дата:</th>
            <th>Задание</th>
            <th>Оценка</th>
            <th>Комментарий</th>
            <th>Посещаемость</th>
        </tr>
{%for lesson in student.lessonsArchive %}
    <tr>
        <td>{{ lesson.date|date("m/d/Y") }}</td>
        <td>{{ lesson.homework }}</td>
        <td>{{ lesson.mark }}</td>
        <td>{{ lesson.markComment}}</td>
        {%if lesson.attendance%}
            <td>Присутствовал</td>
        {% else %}
            <td>Отсутствовал</td>
            {% endif %}
    </tr>
{% endfor %}
    </table>
    </div>
{% endblock %}
