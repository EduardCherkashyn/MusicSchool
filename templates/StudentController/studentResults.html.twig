{% extends 'base.html.twig' %}
{% block title %}Статистика учня{% endblock %}
{% block body %}
    <div class="container">
    <table class="table table-hover">
        <tr>
            <th>Дата:</th>
            <th>Завдання</th>
            <th>Оцінка</th>
            <th>Коментар</th>
            <th>Відвідування</th>
        </tr>
{%for lesson in student.lessonsArchive %}
    <tr>
        <td>{{ lesson.date|date("d/m/Y") }}</td>
        <td>{{ lesson.homework }}</td>
        <td>{{ lesson.mark }}</td>
        <td>{{ lesson.markComment}}</td>
        {%if lesson.attendance%}
            <td>Присутній</td>
        {% else %}
            <td>Відсутній</td>
            {% endif %}
    </tr>
{% endfor %}
    </table>
    </div>
{% endblock %}
