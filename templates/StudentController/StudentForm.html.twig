{%extends 'base.html.twig'%}
{% form_theme register_form 'bootstrap_4_layout.html.twig' %}

{% block title %}Регістрація{% endblock %}

 {% block body %}
     <div class="container" >
     {{ form_start (register_form,{'attr':{'id':'custom_post_form'}})}}
    <h1>Новий учень</h1>
         {{ form_row(register_form.name) }}
         {{ form_row(register_form.photo) }}
         {{ form_row(register_form.email) }}
         {{ form_row(register_form.phone) }}
         <h2>Перший урок:</h2>
         {{ form_row(register_form.lessons.0,{'attr':{'class':'lesson'}}) }}
         <h2>Другий урок:</h2>
         {{ form_row(register_form.lessons.1,{'attr':{'class':'lesson'}}) }}
     <input type="submit" class="btn-success" value="Зберегти" name="Submit" />
{{ form_end(register_form) }}
     </div>
 {% endblock %}
