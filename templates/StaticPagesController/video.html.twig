{% extends 'base.html.twig' %}
{% block title %}Видео{% endblock %}
{% block body %}
    <div class="container">
        <h2 class="pt-5 mb-5 text-center">Видеогалерея</h2>
        <div class="d-flex flex-wrap justify-content-around">
            {% for video in videos %}
                <iframe class="mt-4" width="500" height="315" src="{{ video.link }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            {% endfor %}
        </div>
    </div>
{% endblock %}
